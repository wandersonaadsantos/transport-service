{
    "name": "transport-service",
    "version": "0.1.0",
    "private": true,
    "license": "MIT",
    "author": "Wanderson Santos",
    "email": "wanderson.code@icloud.com",
    "scripts": {
        "be4-install": "yarn install && rimraf .husky && yarn husky && echo 'yarn lint-staged' > .husky/pre-commit && echo 'yarn testcover' > .husky/pre-push",
        "be4-commit": "yarn testcover && yarn lint && git add --all",
        "lint": "yarn lint:ts && yarn lint:scss",
        "lint:ts": "eslint './src/**/*.{ts,tsx}' --fix",
        "lint:scss": "stylelint 'src/**/*.scss' --custom-syntax postcss-scss --fix",
        "start": "cp .env.local .env && react-scripts start",
        "test": "react-scripts test --watchAll=false",
        "testcover": "react-scripts test --coverage --watchAll=false",
        "build": "react-scripts build",
        "eject": "react-scripts eject"
    },
    "devDependencies": {
        "@babel/plugin-proposal-private-property-in-object": "^7.21.11",
        "@testing-library/jest-dom": "^6.4.6",
        "@testing-library/react": "^15.0.7",
        "@testing-library/user-event": "^14.5.2",
        "@types/jest": "^29.5.12",
        "husky": "^9.0.11",
        "lint-staged": "^15.2.7",
        "postcss": "^8.4.39",
        "postcss-scss": "^4.0.9",
        "sass-loader": "^14.2.1",
        "stylelint": "^16.6.1",
        "stylelint-config-standard": "^36.0.1"
    },
    "dependencies": {
        "bootstrap": "^5.3.3",
        "node-sass": "^8.0.0",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "react-router-dom": "^6.25.1",
        "react-scripts": "5.0.1",
        "typescript": "^5.5.3",
        "uuid": "^10.0.0"
    },
    "lint-staged": {
        "src/**/*.{ts,tsx}": [
            "yarn lint:ts"
        ],
        "src/**/*.scss": [
            "yarn lint:scss"
        ]
    },
    "eslintConfig": {
        "extends": [
            "react-app",
            "react-app/jest"
        ]
    },
    "jest": {
        "coveragePathIgnorePatterns": [
            "index.tsx",
            "interface.tsx"
        ],
        "coverageThreshold": {
            "global": {
                "statements": 100,
                "branches": 100,
                "functions": 100,
                "lines": 100
            }
        }
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "engines": {
        "node": "^18"
    }
}